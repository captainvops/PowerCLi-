Get-VMHost | Sort-Object -Property Name | Select Name, @{Name=”Cluster”;E={$_ | Get-Cluster}}, @{Name=”Datacenter”;E={$_ | Get-Datacenter}}, @{Name=“NTPServiceRunning“;E={($_ | Get-VmHostService |Where-Object {$_.key-eq “ntpd“}).Running}}, @{Name="OutgoingPorts";E={($_ | Get-VMHostFirewallException | where {$_.Name -eq "NTP client"}).OutgoingPorts}}, @{Name="Protocols";E={($_ | Get-VMHostFirewallException | where {$_.Name -eq "NTP client"}).Protocols}}, @{Name=“StartupPolicy“;E={($_ | Get-VmHostService |Where-Object {$_.key-eq “ntpd“}).Policy}}, @{Name=“NTPServers“;E={$_ | Get-VMHostNtpServer}}, @{Name="Date&Time";E={(get-view $_.ExtensionData.configManager.DateTimeSystem).QueryDateTime()}} | format-table -autosize
