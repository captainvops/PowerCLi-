get-vmhost | Sort-Object -Property Name | Select Name, @{Name=”Cluster”;E={Get-Cluster -VMHost $_}},@{Name=”Datacenter”;E={Get-Datacenter -VMHost $_}} ,@{Name="Time";Expression={(get-view $_.ExtensionData.configManager.DateTimeSystem).QueryDateTime()}} ,@{Name=“NTPServer“;E={$_ |Get-VMHostNtpServer}}, @{Name=“Service Running?“;E={(Get-VmHostService -VMHost $_ |Where-Object {$_.key-eq “ntpd“}).Running}}, @{Name=“Startup Policy?“;E={(Get-VmHostService -VMHost $_ |Where-Object {$_.key-eq “ntpd“}).Policy}} | format-table -autosize
